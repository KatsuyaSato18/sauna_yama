<!-- app/views/admin/posts/index.html.erb -->

<div class="container mt-5">
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
  <% end %>

  <% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>

  <h2>投稿一覧</h2>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>内容</th>
        <th>投稿者</th>
        <th colspan = "3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td> <!-- 投稿のタイトルをクリックすると詳細画面へ遷移 -->
          <td><%= post.caption %></td> <!-- 仮定して、投稿にcaptionという説明属性が存在するとします -->
          <td><%= link_to post.user.name, admin_user_path(post.user.id) %></td>
          <td><%= link_to "詳細を確認する", admin_post_path(post), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @posts %>
</div>
