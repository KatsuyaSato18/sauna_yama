<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 py-5 px-sm-0 ">
      <span class="bg-light px-2 h4">会員一覧</span>
      <table class="table mt-4 border-bottom">
        <thead>
          <tr>
            <th class="bg-light">会員ID</th>
            <th class="bg-light">ユーザネーム</th>
            <th class="bg-light">メールアドレス</th>
            <th class="bg-light">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name , admin_user_path(user.id), class: "text-dark text-decoration-underline"%></td>
              <td><%= user.email %></td>
              <td>
                <% if !user.is_deleted %>
                <span class="text-success font-weight-bold">有効</span>
                <% else %>
                <span class="text-muted font-weight-bold">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="field row mt-4 d-flex justify-content-center">
        <div class="d-inline-block mx-auto">
          <%= paginate @users %>
        </div>
      </div>
    </div>
  </div>
</div>
