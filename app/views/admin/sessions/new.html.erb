<p id="notice"></p>
<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <span class="bg-light px-2 ">管理者ログイン</span>
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 py-5 px-sm-0 text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row">
        <div class="col-4">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-8">
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
        </div>
      </div>

      <div class="field row mt-4">
        <div class="col-4">
          <%= f.label :パスワード %>
        </div>
        <div class="col-8">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <div class="actions mt-4">
        <%= f.submit "ログイン" , class:"btn btn-sm btn-primary" %>
      </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
