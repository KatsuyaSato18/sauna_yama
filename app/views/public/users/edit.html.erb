<p id="notice"></p>
<div>
  <%= flash[:notice] %>
</div>
<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 py-5 px-sm-0">
      <span class="bg-light px-2">会員情報編集</span>
      <%= form_with model: @user, url: users_information_path, local: true do |f| %>
      　<div class="form-group row">
          <label class="col-3 col-form-label">ユーザ名</label>
          <div class="col-4">
            <%= f.text_field :name, class:"form-control", id:"Name" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">電話番号</label>
          <div class="col-4">
            <%= f.text_field :telephone_number, class:"form-control", id:"inputTelephoneNumber" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">メールアドレス</label>
          <div class="col-4">
            <%= f.text_field :email, class:"form-control", id:"inputEmail" %>
          </div>
        </div>
        <div class="form-group row text-right">
          <div class="col-6">
            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
          </div>
          <div class="col-5">
            <a href="<%= users_withdrawal_path %>" class="btn btn-danger">退会する</a>
          </div>
        </div>
      <% end %>
  　</div>
  </div>
</div>
