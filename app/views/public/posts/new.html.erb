<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @post.errors.count %>件のエラーが発生しました
            </h6>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @post do |f| %>
          <div class="mb-4">
            <i class="fas fa-camera"></i>
            <%= f.label :image, "カメラ" %>
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          </div>
          <div class="mb-3">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
          </div>
          <div class="mb-3">
            <%= f.label :sauna_name, "サウナ店名" %>
            <%= f.text_field :sauna_name, class:"form-control", placeholder:"サウナの店名" %>
          </div>
          <div class="mb-3">
            <%= f.label :address, "住所" %>
            <%= f.text_field :address, class:"form-control", placeholder:"〇〇県〇〇市〇〇町..." %>
          </div>
          <div class="mb-3">
            <%= f.label :tag_ids, "タグを選択" %>
            <%= f.collection_select :tag_ids, Tag.all, :id, :name, {}, { multiple: true, class: "form-control" } %>
          </div>
          <div class="mb-3">
            <%= f.label :caption, "説明" %>
            <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメントここに" %>
          </div>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
